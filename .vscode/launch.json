{
  "rootFolder": "${workspaceFolder}",
    "version": "0.1.0",
    "configurations": [
      {
        "type": "dezog",
        "rootFolder": "${workspaceFolder}",
        "request": "launch",
        "name": "ZXETRIS",
        "remoteType": "zsim",
        "zsim": {
              "preset": "spectrum",
              "memoryModel": "ZX48K",
        },
        "startAutomatically": true,
        "preLaunchTask": "buildZXSpectrum",
        "load":"${workspaceFolder}/out/zxetris.sna",
        "sjasmplus": [
        {
          "path": "${workspaceFolder}/out/zxetris.sld"
        }],
      }
    ]
  }
  